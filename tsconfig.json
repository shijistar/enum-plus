{
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": ".",
    "target": "ES2016",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ES2016", "DOM"],
    "sourceMap": true,
    "sourceRoot": ".",
    "jsx": "react-jsx",
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "allowJs": false,
    "paths": {
      "@enum-plus": ["./src"],
      "@enum-plus/*": ["./src/*"]
    }
  },
  "include": ["src", "plugins", "scripts", "test", "test-browser", "*.ts", ".*.ts"],
  "exclude": ["node_modules", "es", "lib"]
}
